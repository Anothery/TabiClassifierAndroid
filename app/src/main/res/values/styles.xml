<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
    </style>


    <style name="AppTheme.AccentButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/accent_button_bg</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="iconTint">@android:color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="AppTheme.IconButton" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="background">@android:color/transparent</item>
        <item name="iconTint">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">

    </style>

    <style name="AppTheme.TextViewButton">
        <item name="android:clickable">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="VK.Material" parent="AppTheme" />
</resources>